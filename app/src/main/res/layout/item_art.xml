<?xml version="1" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/type_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:paddingTop="18dp">

    <ImageView
        android:id="@+id/image_iv"
        android:layout_width="91dp"
        android:layout_height="67dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/arrow_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:src="@drawable/arrow_right_grey"/>

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image_iv"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/arrow_iv"
        android:layout_toRightOf="@id/image_iv"
        android:ellipsize="end"
        android:lineSpacingExtra="3dp"
        android:maxLines="2"
        android:minLines="2"
        android:text="巴西未来之国"
        android:textColor="@color/item_column_page_textcolor_title"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/author_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_iv"
        android:layout_alignLeft="@id/title_tv"
        android:text="作者"
        android:textColor="@color/item_column_page_textcolor_author"
        android:textSize="12sp"/>


</RelativeLayout>
